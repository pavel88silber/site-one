body {
    margin: 2%;
    /* background-image: url('https://www.freecodecamp.org/news/content/images/size/w1000/2021/06/w-qjCHPZbeXCQ-unsplash.jpg'); */
    background-color: rgb(106, 192, 235);
}

.site-one {
    border: 1px dotted black;
    position: relative;
    height: 600px;
    width: 1000px;
}

.header {
    background-color: #a2c4d3;
    border-radius: 3px;
    height: 100px;
    display: block;
    margin: 5px;
    text-align: center;
    position: relative;
}

.logo {
    background-color: rgb(207, 224, 15);
    height: 40px;
    width: 40px;
    border-radius: 5px 25px;
    position: absolute;
    left: 3%;
    top: 7%;
}

.main {
    background-color: #269ee9;
    border-radius: 3px;
    display: inline-block;
    height: 300px;
    width: 68%;
    margin: 5px;
    padding: 1em;
    text-align: right;
    min-width: 100px;
    float: left;
}


.side {
    background-color: #61b56cb5;
    border-radius: 3px;
    display: inline-block;
    width: 23%;
    height: 300px;
    margin: 5px;
    padding: 1em;
    text-align: right;
    min-width: 100px;
}

.clear {
    clear: both;
}

.footer {
    background-color: burlywood;
    height: 60px;
    border-radius: 3px;
    width: 940px;

    margin: 5px;
    padding: 1em;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 10px;
}